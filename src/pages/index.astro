---
// src/pages/index.astro
// Tidak ada JS framework berat yang di-load di sini. Pure HTML/CSS build.

import "../styles/global.css";

const waNumber = "6282249154086"; // Ganti dengan nomor King
const defaultMessage = "Halo, saya mau sewa mobil. Apakah unit tersedia?";
const waLink = `https://wa.me/${waNumber}?text=${encodeURIComponent(defaultMessage)}`;

const cars = [
  {
    name: "Porsche 911 GT3RS",
    price: "Rp 350rb/hari",
    img: "/public/image/car/porsche.avif"
  },
  {
    name: "BMW M3",
    price: "Rp 300rb/hari",
    img: "/public/image/car/bmw.avif"
  },
  {
    name: "AUDI R8",
    price: "Rp 600rb/hari",
    img: "/public/image/car/audi.avif"
  },
  {
    name: "Nissan GTR25",
    price: "Rp 1.2jt/hari",
    img: "/public/image/car/gtr.avif"
  }
];
---

<html lang="id" style="scroll-behavior: smooth;">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Sewa Mobil Murah & Lepas Kunci. Armada bersih, wangi, dan terawat. Booking sekarang via WhatsApp."
    />
    <title>Rental Mobil Premium - Cepat & Aman</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>
  <body class="bg-gray-50 text-gray-900 font-sans antialiased">
    <header class="relative bg-slate-900 text-white overflow-hidden">
      <div class="absolute inset-0 bg-black/50 z-10"></div>
      <img
        src="/public/image/hero.avif"
        alt="Rental Mobil Background"
        class="absolute inset-0 w-full h-full object-cover z-0"
        width="1200"
        height="600"
        fetchpriority="high"
      />

      <div
        class="relative z-20 max-w-full mx-auto px-4 py-24 md:py-32 flex flex-col items-center text-center"
      >
        <h1
          class="text-4xl md:text-6xl font-extrabold tracking-tight mb-4 text-white"
        >
          Sewa Mobil <span class="text-yellow-400">Tanpa Ribet</span>
        </h1>
        <p class="text-lg md:text-xl text-gray-200 mb-8 max-w-2xl">
          Armada terbaru, bersih, dan siap antar jemput bandara. Harga
          transparan tanpa biaya tersembunyi.
        </p>
        <a
          href="#armada"
          class="bg-yellow-400 text-black font-bold py-3 px-8 rounded-full hover:bg-yellow-300 transition transform hover:scale-105 shadow-lg"
        >
          Lihat Unit Tersedia
        </a>
      </div>
    </header>

    <section class="py-8 bg-white shadow-sm">
      <div class="max-w-full mx-auto px-4 grid grid-cols-3 gap-4 text-center">
        <div>
          <p class="font-bold text-xl text-slate-900">24 Jam</p>
          <p class="text-sm text-gray-500">Layanan Support</p>
        </div>
        <div>
          <p class="font-bold text-xl text-slate-900">50+</p>
          <p class="text-sm text-gray-500">Unit Ready</p>
        </div>
        <div>
          <p class="font-bold text-xl text-slate-900">Asuransi</p>
          <p class="text-sm text-gray-500">All Risk</p>
        </div>
      </div>
    </section>

    <main id="armada" class="max-w-full mx-auto px-4 py-16">
      <h2 class="text-3xl font-bold text-center mb-10">
        Pilihan Armada Favorit
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          cars.map((car) => (
            <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition border border-gray-100">
              <img
                src={car.img}
                alt={car.name}
                class="w-full h-48 object-cover"
                loading="lazy"
                width="600"
                height="400"
              />
              <div class="p-5">
                <h3 class="font-bold text-lg mb-1">{car.name}</h3>
                <p class="text-slate-600 text-sm mb-4">{car.price}</p>
                <a
                  href={
                    waLink + `&text=Halo admin, saya mau booking ${car.name}`
                  }
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block w-full bg-slate-900 text-white text-center py-2 rounded-lg font-medium hover:bg-slate-800 transition"
                >
                  Booking via WA
                </a>
              </div>
            </div>
          ))
        }
      </div>
    </main>

    <footer class="bg-slate-100 py-8 text-center text-sm text-gray-500">
      <p>&copy; 2024 Rental Mobil King. All rights reserved.</p>
    </footer>

    <a
      href={waLink}
      target="_blank"
      rel="noopener noreferrer"
      class="fixed bottom-6 right-6 z-50 bg-green-500 text-white p-4 rounded-full shadow-2xl hover:bg-green-600 transition hover:scale-110 flex items-center justify-center gap-2 group"
      aria-label="Chat WhatsApp"
    >
      <svg
        class="w-8 h-8 fill-current"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
        ></path></svg
      >
      <span
        class="font-bold hidden group-hover:block transition-all duration-300"
        >Chat Rental</span
      >
    </a>
  </body>
</html>
